#include <stdio.h>
int main() {
    int a = 10;
    float b = 5.5;
    char c = 'A';

    int *p1 = &a;
    float *p2 = &b;
    char *p3 = &c;

    printf("Values of variables: %d, %.2f, %c\n", a, b, c);
    printf("Values using pointers: %d, %.2f, %c\n", *p1, *p2, *p3);

    printf("Pointer addresses: %p, %p, %p\n", p1, p2, p3);

    return 0;
}

2.
#include <stdio.h>
int main() {
    int arr[3] = {10, 20, 30};
    int *p = arr;

    printf("Initial Address: %p, Value: %d\n", p, *p);

    p++; 
    printf("After Increment: %p, Value: %d\n", p, *p);

    p--; 
    printf("After Decrement: %p, Value: %d\n", p, *p);

    return 0;
}


3.


#include <stdio.h>

void modify(int *x, int *y) {
    *x += 5;
    *y *= 2;
}

int main() {
    int a = 10, b = 20;

    printf("Before: a = %d, b = %d\n", a, b);
    modify(&a, &b);
    printf("After: a = %d, b = %d\n", a, b);

    return 0;
}




6.


#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i;
    printf("Enter number of integers: ");
    scanf("%d", &n);

    int *arr = (int*) calloc(n, sizeof(int));

    printf("Values after calloc():\n");
    for(i = 0; i < n; i++)
        printf("%d ", arr[i]);

    printf("\nEnter new values:\n");
    for(i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    printf("Updated values:\n");
    for(i = 0; i < n; i++)
        printf("%d ", arr[i]);

    free(arr);
    return 0;
}


7.


#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, newSize, i;
    printf("Enter initial size: ");
    scanf("%d", &n);

    int *arr = (int*) malloc(n * sizeof(int));

    printf("Enter %d values:\n", n);
    for(i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    printf("Enter new increased size: ");
    scanf("%d", &newSize);

    arr = (int*) realloc(arr, newSize * sizeof(int));

    printf("Enter %d new values:\n", newSize - n);
    for(i = n; i < newSize; i++)
        scanf("%d", &arr[i]);

    printf("Array elements:\n");
    for(i = 0; i < newSize; i++)
        printf("%d ", arr[i]);

    free(arr);
    return 0;
}


