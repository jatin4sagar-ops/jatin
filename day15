#include <stdio.h>

int main() {
    int n, i;
    long long factorial = 1; // use long long for large numbers

    printf("Enter a number: ");
    scanf("%d", &n);

    if(n < 0) {
        printf("Factorial is not defined for negative numbers.\n");
    } else {
        for(i = 1; i <= n; i++) {
            factorial = factorial * i;
        }
        printf("Factorial of %d = %lld\n", n, factorial);
    }



