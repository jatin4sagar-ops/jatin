#include <stdio.h>

int main() {
    int n, digit;
    long long product = 1;  
    int hasOdd = 0;        

    printf("Enter a number: ");
    scanf("%d", &n);

    int temp = n;
    while (temp != 0) {
        digit = temp % 10;         
        if (digit % 2 != 0) {       
            product *= digit;      
            hasOdd = 1;
        }
        temp /= 10;                
    }

    if (hasOdd)
        printf("Product of odd digits of %d = %lld\n", n, product);
    else
        printf("No odd digits in %d\n", n);

    return 0;
} 

Q2


#include <stdio.h>
#include <string.h>

int main() {
    char binary[100]; 

    printf("Enter a binary number: ");
    scanf("%s", binary);

    printf("1's complement: ");
    for (int i = 0; i < strlen(binary); i++) {
        if (binary[i] == '0')
            printf("1");
        else if (binary[i] == '1')
            printf("0");
        else {
            printf("\nInvalid input! Please enter only 0s and 1s.\n");
            return 0;
        }
    }
    printf("\n");

    return 0;
}


